<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tareas" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="listBox">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="{Binding Nombre}" FontWeight="Bold" />
                            <TextBlock Text="{Binding Descripcion}" />
                            <TextBlock Text="{Binding Fecha}" />
                        </StackPanel>
                        <Button Grid.Column="1" Content="Crear" Click="Crear_Click" />
                        <Button Grid.Column="2" Content="Eliminar" Click="Eliminar_Click" />
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
